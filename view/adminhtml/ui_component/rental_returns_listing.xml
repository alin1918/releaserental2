<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">rental_returns_listing.rental_returns_listing_data_source</item>
            <item name="deps" xsi:type="string">rental_returns_listing.rental_returns_listing_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">rental_returns_listing_columns</item>
    </argument>
    <dataSource name="rental_returns_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">\SalesIgniter\Rental\Ui\Component\Listing\DataProviders\SalesIgniter\Returns\Grid</argument>
            <argument name="name" xsi:type="string">rental_returns_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">reservationorder_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                </item>
            </argument>
        </argument>
    </dataSource>
    <listingToolbar name="listing_top">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="sticky" xsi:type="boolean">true</item>
            </item>
        </argument>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters"/>
        <massaction name="listing_massaction">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">SalesIgniter_Rental/js/grid/return-massactions</item>
                </item>
            </argument>
            <action name="returnrental">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">return</item>
                        <item name="label" xsi:type="string" translate="true">Return</item>
                        <item name="url" xsi:type="url" path="salesigniter_rental/returns/massReturn"/>
                        <item name="confirm" xsi:type="array">
                            <item name="title" xsi:type="string" translate="true">Return items</item>
                            <item name="message" xsi:type="string" translate="true">Are you sure you want to return selected items?</item>
                        </item>
                        <item name="callback" xsi:type="array">
                            <item name="provider" xsi:type="string">rental_returns_listing.rental_returns_listing.listing_top.listing_massaction</item><!--the provider name is from the xml, but you can see other providers in registry.js get method, query param -->
                            <item name="target" xsi:type="string">returnSelected</item>
                        </item>
                    </item>
                </argument>
            </action>
        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="rental_returns_listing_columns">
        <selectionsColumn name="ids">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">reservationorder_id</item>
                </item>
            </argument>
        </selectionsColumn>
        <column name="reservationorder_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="sorting" xsi:type="string">asc</item>
                    <item name="label" xsi:type="string" translate="true">ID</item>
                </item>
            </argument>
        </column>
        <column name="start_date" class="SalesIgniter\Rental\Ui\Component\Listing\Column\Date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">dateRange</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/date</item>
                    <item name="dataType" xsi:type="string">date</item>
                    <item name="label" xsi:type="string" translate="true">Start Date</item>
                </item>
            </argument>
        </column>
        <column name="end_date" class="SalesIgniter\Rental\Ui\Component\Listing\Column\Date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">dateRange</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/date</item>
                    <item name="dataType" xsi:type="string">date</item>
                    <item name="label" xsi:type="string" translate="true">End Date</item>
                </item>
            </argument>
        </column>

        <column name="qty">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Reserved Qty</item>
                </item>
            </argument>
        </column>
        <column name="qty_shipped">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Shipped Qty</item>
                </item>
            </argument>
        </column>
        <column name="max_qty_to_return">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Max Qty To Return</item>
                </item>
            </argument>
        </column>
        <column name="order_id" class="SalesIgniter\Common\Ui\Component\Listing\Column\Order">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Order Id</item>
                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
                    <item name="filter" xsi:type="string">text</item>
                    <item name="sorting" xsi:type="string">asc</item>
                </item>
            </argument>
        </column>
        <column name="product_name" class="SalesIgniter\Common\Ui\Component\Listing\Column\Product">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Product</item>
                </item>
            </argument>
        </column>
        <column name="qty_to_return" class="SalesIgniter\Rental\Ui\Component\Listing\Column\InputField">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">reservationorder_id</item>
                    <item name="component" xsi:type="string">SalesIgniter_Rental/js/grid/columns/postinput</item>
                    <item name="label" xsi:type="string" translate="true">Qty To Return</item>
                    <item name="sortable" xsi:type="boolean">false</item>
                </item>
            </argument>
        </column>
        <column name="serials" class="SalesIgniter\Rental\Ui\Component\Listing\Column\SerialReturn">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">reservationorder_id</item>
                    <item name="component" xsi:type="string">SalesIgniter_Rental/js/grid/columns/serials</item>
                    <item name="label" xsi:type="string" translate="true">Serial</item>
                    <item name="sortable" xsi:type="boolean">false</item>
                </item>
            </argument>
        </column>
    </columns>
</listing>
